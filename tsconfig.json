{
  "compilerOptions": {
    "target": "esNext",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "removeComments": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "declarationDir": "dist/types",
  },
  "include": [ "src/**/*" ],
}

